@model List<RealEstate_Dapper_UI.Dtos.ServiceDtos.ResultServiceDto>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Admin/Index.cshtml";
    int count = 0;
}

<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <div class="bg-light rounded h-100 p-4">
                <h6 class="mb-4">Personel Listesi</h6>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Hizmet Başlığı</th>
                                <th scope="col">Durum</th>
                                <th scope="col">Sil</th>
                                <th scope="col">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model != null && Model.Any())
                            {
                                foreach (var item in Model)
                                {
                                    count++;
                                    <tr>
                                        <th scope="row">@count</th>
                                        <td>@item.ServiceName</td>
                                        <td>
                                            @if (item.ServiceStatus == true)
                                            {
                                                <span class="text-success">Aktif</span>
                                            }
                                            else
                                            {
                                                <span class="text-danger">Pasif</span>
                                            }
                                        </td>
                                        <td>
                                            <a href="/Service/DeleteService/@item.ServiceID" class="btn btn-outline-danger">Sil</a>
                                        </td>
                                        <td>
                                            <a href="/Service/UpdateService/@item.ServiceID" class="btn btn-outline-success">Güncelle</a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="5" class="text-center">Henüz hizmet eklenmedi.</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <a href="/Service/CreateService/" class="btn btn-outline-info">Yeni Hizmet Girişi</a>
                </div>
            </div>
        </div>
    </div>
</div>
